{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "PYTHONUNBUFFERED": "1",
    "LD_LIBRARY_PATH": "/nix/store/*/lib:/usr/lib:/lib"
  }
}